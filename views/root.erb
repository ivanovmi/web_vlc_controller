<html>
    <head>
        <title>VLC controller</title>
        <link rel="stylesheet" type="text/css" href="/style/style.css">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
    </head>

    <body>
        <table cellpadding="0" cellspacing="0" width="100%" height="100%"  border="0">
          <tr>
            <td colspan="3">
              <%= @@vlc.title %>
            </td>
          </tr>

          <tr>
            <td class="centercolumn" colspan="3" align="center">
              <div class="centercolumn">
                <a href="play">
                  <img src="/images/play.png" width="16%">
                </a>
              </div>
            </td>
          </tr>

          <tr>
            <td class="leftcolumn" align="center">
              <div class="leftcolumn">
                <a href="prev">
                    <img src="/images/prev.png">
                </a>
              </div>
            </td>

            <td class="centercolumn" align="center">
              <div class="centercolumn">
              </div>
            </td>

            <td class="rightcolumn" align="center">
              <div class="rightcolumn">
                <a href="next">
                    <img src="/images/next.png">
                </a>
              </div>
            </td>
          </tr>

          <tr>
            <td class="leftcolumn" align="center">
              <div class="leftcolumn">
                <a href="volup">
                  <img src="/images/volup.png">
                </a>
              </div>
            </td>

            <td class="centercolumn" align="center">
              <div class="centercolumn">
                <a href="mute">
                  <img src="/images/mute.png">
                </a>
              </div>
            </td>

            <td class="rightcolumn" align="center">
              <div class="rightcolumn">
                <a href="voldown">
                  <img src="/images/voldown.png">
                </a>
              </div>
            </td>
          </tr>

          <tr>
            <td colspan="3" align="center">
              <div>
                <a href="fullscreen">
                  <img src="/images/fullscreen.png" width="8%">
                </a>
              </div>
            </td>
          </tr>

          <tr>
            <td class="leftcolumn" align="center">
              <div class="leftcolumn">
                <a href="showtime">
                  <img src="/images/time.png">
                </a>
              </div>
            </td>

            <td class="centercolumn" align="center">
            </td>

            <td class="rightcolumn" align="center">
              <div>
                <%= Time.at(@@vlc.time).utc.strftime("%H:%M:%S") %>/<%= Time.at(((@@vlc.time*100)/@@vlc.progress)).utc.strftime("%H:%M:%S") %>
              </div>
            </td>
          </tr>
        </table>
    </body>
</html>